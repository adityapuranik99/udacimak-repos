        {
          "id": 842885,
          "key": "0934c1b0-9d5b-4cbf-9e9a-7874793516d7",
          "title": "Frontend Super Basics",
          "semantic_type": "Concept",
          "is_public": true,
          "user_state": {
            "node_key": "0934c1b0-9d5b-4cbf-9e9a-7874793516d7",
            "completed_at": null,
            "last_viewed_at": null,
